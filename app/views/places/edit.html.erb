<h1>Modificar Puesto de Votaci√≥n</h1>
<% if user_signed_in? && (current_user.email == "dayanm@uninorte.com" || current_user.email == "hector@uninorte.com" || current_user.email == "julian@uninorte.com" ) %>
    <%= form_for :place, url: place_path(@place), method: :patch do |f| %>
     
      <% if @place.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@place.errors.count, "error") %> han impedido que el puesto sea registrado:
        </h2>
          <ul>
            <% @place.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
     
      <p>
        <%= f.label :nombre %><br>
        <%= f.text_field :nombre %>
      </p>
     
      <p>
        <%= f.label :direccion %><br>
        <%= f.text_field :direccion %>
      </p>

      <p>
        <%= f.label :ciudad %><br>
        <%= f.text_field :ciudad %>
      </p>

      <p>
        <%= f.label :departamento %><br>
        <%= f.text_field :departamento %>
      </p>
     
      <p>
        <button type="submit" class="btn btn-default">Editar</button>
      </p>
    <% end %>
  <%else%>
    <h1>Acceso denegado</h1>
<% end %>
<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default"><%= link_to 'Volver', places_path %></button>
</div>